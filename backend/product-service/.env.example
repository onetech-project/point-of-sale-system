# Product Service Environment Configuration

# Server
PORT=8080

# Database
DATABASE_URL=postgresql://pos_user:pos_password@postgres:5432/pos_db?sslmode=disable

# Redis
REDIS_HOST=redis:6379
REDIS_PASSWORD=pos_password
REDIS_DB=0

# Object Storage (S3/MinIO) - Feature 005
# MinIO (Development)
S3_ENDPOINT=minio:9000
S3_PUBLIC_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=product-photos
S3_REGION=us-east-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true

# Production S3 Configuration (comment out MinIO settings above, uncomment below)
# S3_ENDPOINT=s3.amazonaws.com
# S3_PUBLIC_ENDPOINT=s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_BUCKET_NAME=pos-product-photos
# S3_REGION=us-east-1
# S3_USE_SSL=true
# S3_FORCE_PATH_STYLE=false

# Storage Configuration
MAX_PHOTO_SIZE_BYTES=10485760
MAX_PHOTOS_PER_PRODUCT=5
DEFAULT_STORAGE_QUOTA_BYTES=5368709120
PRESIGNED_URL_TTL_SECONDS=604800

# Service Discovery (optional)
SERVICE_NAME=product-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Observability
OTEL_COLLECTOR_ENDPOINT=otel-collector:4317

# Vault Configuration (UU PDP Encryption)
VAULT_ADDR=https://localhost:8200
VAULT_TOKEN=hvs.XXX
VAULT_TRANSIT_KEY=YOUR-TRANSIT-KEY-HERE
VAULT_CACERT=<path_to_ca_certificate>
