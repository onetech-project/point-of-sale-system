# Product Service Environment Configuration

# Server
PORT=8086

# Database
DATABASE_URL=postgresql://pos_user:pos_password@localhost:5432/pos_db?sslmode=disable

# Redis
REDIS_HOST=localhost:6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-secret-key-change-in-production

# File Upload (Legacy - for backward compatibility)
UPLOAD_DIR=./uploads
MAX_PHOTO_SIZE_MB=5

# Object Storage (S3/MinIO) - Feature 005
# MinIO (Development)
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=product-photos
S3_REGION=us-east-1
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true

# Production S3 Configuration (comment out MinIO settings above, uncomment below)
# S3_ENDPOINT=s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_BUCKET_NAME=pos-product-photos
# S3_REGION=us-east-1
# S3_USE_SSL=true
# S3_FORCE_PATH_STYLE=false

# Storage Configuration
MAX_PHOTO_SIZE_BYTES=10485760          # 10MB per photo
MAX_PHOTOS_PER_PRODUCT=5               # Maximum 5 photos per product
DEFAULT_STORAGE_QUOTA_BYTES=5368709120 # 5GB default per tenant
PRESIGNED_URL_TTL_SECONDS=604800       # 7 days for public URLs

# Service Discovery (optional)
SERVICE_NAME=product-service
SERVICE_VERSION=1.0.0

