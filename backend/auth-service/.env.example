# Auth Service Configuration

# Server
PORT=8082

# Database Configuration
DATABASE_URL=postgresql://pos_user:pos_password@localhost:5432/pos_db?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPICS=login.success,login.failure,reset.password.requested,password.changed,logout.success,registration.success

# JWT Configuration
JWT_SECRET=default-secret-change-in-production
JWT_EXPIRATION_MINUTES=15

# Session Configuration
SESSION_TTL_MINUTES=15

# Rate Limiting
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug
