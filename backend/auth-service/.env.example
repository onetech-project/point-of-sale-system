# Auth Service Configuration

# Server
PORT=8080
SERVICE_NAME=auth-service

# Database Configuration
DATABASE_URL=postgresql://pos_user:pos_password@postgres:5432/pos_db?sslmode=disable

# Redis Configuration
REDIS_HOST=redis:6379
REDIS_PASSWORD=pos_password
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC=notification-events
KAFKA_AUDIT_TOPIC=audit-events

# JWT Configuration
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRATION_MINUTES=15

# Session Configuration
SESSION_TTL_MINUTES=60

# Rate Limiting
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Observability
OTEL_COLLECTOR_ENDPOINT=otel-collector:4317

DEBUG=true

# Vault Configuration (UU PDP Encryption)
VAULT_ADDR=https://localhost:8200
VAULT_TOKEN=hvs.XXX
VAULT_TRANSIT_KEY=YOUR-TRANSIT-KEY-HERE
VAULT_CACERT=<path_to_ca_certificate>

# Timezone Configuration
TZ=Asia/Jakarta