# Root Environment Configuration
# Used by docker-compose and all services

# Database Configuration
POSTGRES_DB=pos_db
POSTGRES_USER=pos_user
POSTGRES_PASSWORD=pos_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=pos_password

# Kafka Configuration
KAFKA_BROKER=localhost:9092
ZOOKEEPER_HOST=localhost:2181

# JWT Configuration (shared across all services)
JWT_SECRET=default-secret-change-in-production

# Service Ports
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8082
USER_SERVICE_PORT=8083
TENANT_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085
PRODUCT_SERVICE_PORT=8086
ORDER_SERVICE_PORT=8087
AUDIT_SERVICE_PORT=8088

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Email Configuration (shared)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# App URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:8080

# Vault Configuration
VAULT_DEV_ROOT_TOKEN_ID=dev-root-token
VAULT_TOKEN=hvs.XXX
VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
VAULT_ADDR=http://0.0.0.0:8200